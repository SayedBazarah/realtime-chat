<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Real time web chat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      src="https://kit.fontawesome.com/04314d908b.js"
      crossorigin="anonymous"
    ></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/login.js"></script>
  </head>
  <body>
    <div class="w-screen h-screen flex justify-center items-center">
      <form id="login" class="flex flex-col gap-4">
        <div class="flex flex-col items-center">
          <label
            for="dropzone-file"
            class="relative flex flex-col items-center justify-center w-[200px] h-[200px] rounded-full border-2 border-gray-300 border-dashed cursor-pointer bg-gray-50 dark:hover:bg-bray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600"
          >
            <img
              id="profileImg"
              class="rounded-full w-[180px] h-[180px] border-2 border-white object-contain"
              src="data:image/jpeg;base64,"
              alt="user"
            />
            <div
              class="z-50 invisible hover:visible text-white font-bold absolute top-0 bottom-0 right-0 left-0 flex justify-center items-center"
            >
              Change
            </div>
            <input id="dropzone-file" type="file" class="hidden" />
          </label>
        </div>
        <div>
          <input
            type="text"
            placeholder="Your Name"
            class="border outline-none rounded-md py-2 px-3 text-center"
          />
        </div>
        <div class="">
          <input
            type="submit"
            value="START CHAT"
            class="bg-gray-700 hover:bg-gray-400 rounded-md text-center text-white w-full py-2"
          />
        </div>
      </form>
    </div>
  </body>
</html>
